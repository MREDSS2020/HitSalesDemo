<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center">

                    <TextView
                        android:text=" Name "
                        android:drawableLeft="@drawable/user1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/gray1"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" : " />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:textColor="@color/gray1"
                        android:textSize="12sp" />
                </LinearLayout>

        <!-- Mobile1 -->
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center">

                    <TextView
                        android:drawableLeft="@drawable/mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=" Mobile 1"
                        android:layout_weight="1"
                        android:textColor="@color/gray1"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" : " />

                    <TextView
                        android:id="@+id/tvMobNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:textColor="@color/gray1"
                        android:textSize="12sp"/>

                    <ImageView
                        android:id="@+id/ivMob"
                        android:padding="2dp"
                        android:src="@drawable/call"
                        android:layout_width="25dp"
                        android:layout_height="30dp" />
                </LinearLayout>

        <!-- Mobile2 -->
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center">

                    <TextView
                        android:drawableLeft="@drawable/mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=" Mobile 2"
                        android:layout_weight="1"
                        android:textColor="@color/gray1"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" : " />

                    <TextView
                        android:id="@+id/tvMobNo2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:textColor="@color/gray1"
                        android:textSize="12sp"/>

                    <ImageView
                        android:id="@+id/ivMob2"
                        android:padding="2dp"
                        android:src="@drawable/call"
                        android:layout_width="25dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <!-- Mobile-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvMNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:textColor="@color/gray1"
                                android:textSize="12sp"/>

                            <ImageView
                                android:id="@+id/ivCall"
                                android:padding="1dp"
                                android:src="@drawable/call"
                                android:layout_width="25dp"
                                android:layout_height="30dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvMNo2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:textColor="@color/gray1"
                                android:textSize="12sp"/>

                            <ImageView
                                android:id="@+id/ivCall2"
                                android:padding="1dp"
                                android:src="@drawable/call"
                                android:layout_width="25dp"
                                android:layout_height="30dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center">

                    <TextView
                        android:drawableLeft="@drawable/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=" Email"
                        android:layout_weight="1"
                        android:textColor="@color/gray1"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" : " />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:textColor="@color/gray1"
                        android:textSize="12sp"/>

                    <ImageView
                        android:id="@+id/ivEmail"
                        android:padding="1dp"
                        android:src="@drawable/mail"
                        android:layout_width="25dp"
                        android:layout_height="30dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:orientation="vertical">

                        <TextView
                            android:drawableLeft="@drawable/calendar"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Last Contact"
                            android:textColor="@color/gray1"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=" : "
                            android:visibility="gone" />

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tvLastContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15-07-2019"
                            android:textColor="@color/gray1"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:orientation="vertical">

                        <TextView
                            android:drawableLeft="@drawable/calendar"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Next Contact"
                            android:textColor="@color/gray1"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=" : "
                            android:visibility="gone" />

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tvNextContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15-08-2019"
                            android:textColor="@color/gray1"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Type Description -->
                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="left|center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=" Type Description"
                        android:layout_weight="1"
                        android:textColor="@color/gray1"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" : " />

                    <TextView
                        android:id="@+id/tvTypeDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:textColor="@color/gray1"
                        android:textSize="12sp"/>

                </LinearLayout>

                <!--  Preferred Locations -->
                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="left|center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Preferred Locations"
                        android:layout_weight="1"
                        android:textColor="@color/gray1"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" : " />

                    <TextView
                        android:id="@+id/tvPrefLoc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:textColor="@color/gray1"
                        android:textSize="12sp"/>

                </LinearLayout>

                <View
                    android:layout_margin="2dp"
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/iv_FollowUp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:tooltipText="FollowUp"
                        android:layout_weight="1"
                        android:src="@drawable/followup"/>

                    <View
                        android:layout_margin="2dp"
                        android:background="@color/colorAccent"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/iv_View"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:tooltipText="View"
                        android:layout_weight="1"
                        android:src="@drawable/eyev"/>

                    <View
                        android:layout_margin="2dp"
                        android:background="@color/colorAccent"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/iv_Edit"
                        android:layout_width="30dp"
                        android:padding="2dp"
                        android:tooltipText="Edit"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/penciledit"/>

                    <View
                        android:layout_margin="2dp"
                        android:background="@color/colorAccent"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="30dp"
                        android:padding="4dp"
                        android:tooltipText="Delete"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/delete"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
